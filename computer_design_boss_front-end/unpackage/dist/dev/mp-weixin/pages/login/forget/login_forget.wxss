
.forget-container.data-v-93dfe9d4 {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}
.forget-header.data-v-93dfe9d4 {
  margin: 80rpx 0 60rpx 0;
  text-align: center;
}
.forget-title.data-v-93dfe9d4 {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}
.forget-form.data-v-93dfe9d4 {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}



/* 验证方式选择 */
.auth-method.data-v-93dfe9d4 {
  display: flex;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.method-item.data-v-93dfe9d4 {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
}
.method-item.active.data-v-93dfe9d4 {
  color: #007aff;
}
.method-item.active.data-v-93dfe9d4::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}
.method-text.data-v-93dfe9d4 {
  font-size: 28rpx;
  color: #666;
}
.method-item.active .method-text.data-v-93dfe9d4 {
  color: #007aff;
  font-weight: bold;
}

/* 表单样式 */
.form-item.data-v-93dfe9d4 {
  margin-bottom: 40rpx;
}
.form-label.data-v-93dfe9d4 {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}
.form-input-wrapper.data-v-93dfe9d4 {
  display: flex;
  align-items: center;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
}
.form-input.data-v-93dfe9d4 {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  color: #333;
  padding-left: 16rpx;
}
.form-input.data-v-93dfe9d4:focus {
  outline: none;
}

/* 验证码按钮 */
.sms-btn.data-v-93dfe9d4 {
  width: 160rpx;
  height: 64rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 24rpx;
  border-radius: 32rpx;
  margin-left: 20rpx;
}
.sms-btn.data-v-93dfe9d4:disabled {
  background-color: #ccc;
}

/* 错误提示 */
.error-text.data-v-93dfe9d4 {
  font-size: 24rpx;
  color: #e54d42;
  margin-top: 12rpx;
  display: block;
}

/* 按钮区域 */
.reset-buttons.data-v-93dfe9d4 {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
}
.back-btn.data-v-93dfe9d4 {
  flex: 1;
  height: 96rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: 2rpx solid #e5e5e5;
}
.confirm-btn.data-v-93dfe9d4 {
  flex: 1;
  height: 96rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 48rpx;
}
.confirm-btn.data-v-93dfe9d4:disabled {
  background-color: #ccc;
}

/* 登录链接 */
.login-link.data-v-93dfe9d4 {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
.login-text.data-v-93dfe9d4 {
  color: #007aff;
  margin-left: 10rpx;
}
