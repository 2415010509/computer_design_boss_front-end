
.job-list-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}
.search-container {
  padding: 20rpx;
  background-color: #fff;
}
.search-bar {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
}
.search-bar input {
  flex: 1;
  margin: 0 15rpx;
  font-size: 28rpx;
}
.cancel-btn {
  color: #007aff;
  font-size: 28rpx;
}
.filter-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.filter-tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.filter-tab {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
}
.filter-tab.active {
  color: #007aff;
  border-bottom: 2rpx solid #007aff;
}
.category-tabs {
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx;
}
.category-tab {
  padding: 10rpx 20rpx;
  margin: 10rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
}
.category-tab.active {
  background-color: #007aff;
  color: #fff;
}
.job-list {
  padding: 0 20rpx;
}
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
